<div class="col-md-12 basic-info">
  <div class="col-md-8" style="padding:0;">
    <div class="product-show-image">
      <% if @product.image.url != nil %>
        <%= image_tag @product.image.url , class: "product-show-image-size" %>
      <% else %>
        <%= image_tag "default.jpg", class: "product-show-image-size" %>
      <% end %>
    </div>
    <div class="product-show-content">
      <span class="product-show-content-header">Opis:</span>
      <span class="product-show-content-content"><%= @product.content %></span>
    </div>
  </div>
  <div class="col-md-4" style="border-left: 1px solid #e5e5e5;">
    <div class="col-md-12 product-show-params">
      <%= render 'products/show_partials/listing', name: "Index", product_details: @product.product_index %>
      <%= render 'products/show_partials/listing', name: "Cena zakupu", product_details: @product.price_net_buy %>
      <%= render 'products/show_partials/listing', name: "Cena sprzedaży", product_details: @product.price_net_sell %>
      <%= render 'products/show_partials/listing', name: "Dostępna ilość", product_details: @product.qty %>
      <%= render 'products/show_partials/listing', name: "Rodzaj produktu", product_details: @product.product_kind %>
    </div>
  </div>
</div>
